<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="ch.hevs.aislab.demo">

    <application
        android:name=".BaseApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name=".ui.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Rooms -->
        <activity
            android:name=".ui.room.RoomsActivity"
            android:label="@string/title_activity_accounts"
            android:parentActivityName=".ui.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ch.hevs.aislab.demo.ui.MainActivity" />
        </activity>
        <activity
            android:name=".ui.room.EditRoomActivity"
            android:label="@string/edit_room"
            android:parentActivityName=".ui.room.RoomsActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ch.hevs.aislab.demo.ui.room.RoomsActivity" />
        </activity>
        <activity
            android:name=".ui.room.RoomDetailActivity"
            android:parentActivityName=".ui.room.RoomsActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ch.hevs.aislab.demo.ui.room.RoomsActivity" />
        </activity>

        <!-- Computers -->
        <activity
            android:name=".ui.computer.ComputersActivity"
            android:label="@string/title_activity_accounts"
            android:parentActivityName=".ui.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ch.hevs.aislab.demo.ui.MainActivity" />
        </activity>
        <activity
            android:name=".ui.computer.EditComputerActivity"
            android:label="@string/edit_computer"
            android:parentActivityName=".ui.computer.ComputersActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ch.hevs.aislab.demo.ui.computer.ComputersActivity" />
        </activity>
        <activity
            android:name=".ui.computer.ComputerDetailActivity"
            android:parentActivityName=".ui.computer.ComputersActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ch.hevs.aislab.demo.ui.computer.ComputersActivity" />
        </activity>

        <!-- Students -->
        <activity
            android:name=".ui.student.StudentsActivity"
            android:label="@string/title_activity_accounts"
            android:parentActivityName=".ui.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ch.hevs.aislab.demo.ui.MainActivity" />
        </activity>
        <activity
            android:name=".ui.student.EditStudentActivity"
            android:label="@string/edit_student"
            android:parentActivityName=".ui.student.StudentsActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ch.hevs.aislab.demo.ui.student.StudentsActivity" />
        </activity>
        <activity
            android:name=".ui.student.StudentDetailActivity"
            android:parentActivityName=".ui.student.StudentsActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ch.hevs.aislab.demo.ui.student.StudentsActivity" />
        </activity>

    </application>

</manifest>